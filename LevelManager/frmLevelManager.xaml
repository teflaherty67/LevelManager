<Window x:Class="LevelManager.frmLevelManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LevelManager"
        mc:Ignorable="d"
        Title="Level Manager"
        Height="Auto"
        Width="Auto"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        Background="White">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        
        <!--Instruction Row-->
        <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left">
            <Label Content="Enter plate adjustments in decimal inches:"/>
            <Label Content="(Use + to raise, - to lower)" FontSize="10" Foreground="Gray"/>
        </StackPanel>

        <!--Global Input Row as Grid-->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <CheckBox Grid.Column="0" x:Name="cbxGlobal" 
              Content="Apply same adjustment to all levels:"
              VerticalAlignment="Center"
              Checked="cbxGlobal_Checked"
              Unchecked="cbxGlobal_Unchecked"/>
            <TextBox Grid.Column="1" x:Name="txtGlobalAdjustment"
             Width="60" Height="25"
             Margin="10,0,0,0"
             VerticalAlignment="Center"
             IsEnabled="False"/>
        </Grid>

        <!--Dynamic Panel-->
        <StackPanel Grid.Row="1">
            <StackPanel x:Name="sp"/>
        </StackPanel>


        <!--Buttons Section-->
        <StackPanel Grid.Row="4"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center">
            <Button x:Name="btnOK"
                    Content="OK"
                    Width="75"
                    Height="25"
                    Margin="0,0,10,0"
                    IsDefault="True"
                    Click="btnOK_Click"/>
            <Button x:Name="btnCancel"
                    Content="Cancel"
                    Width="75"
                    Height="25"
                    Margin="0,0,10,0"
                    IsCancel="True"
                    Click="btnCancel_Click"/>
            <Button x:Name="btnHelp"
                    Content="Help"
                    Width="75"
                    Height="25"
                    Click="btnHelp_Click"/>
        </StackPanel>
    </Grid>
</Window>
